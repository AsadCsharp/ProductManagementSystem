@model Purchase.ViewModels.PurchaseHeaderVM

<div class="card mb-3" style="width: 30rem;">
    <div class="card-body">
        <h6 class="float-end">@Model.PurchaseDate.ToString("dd/MM/yyyy")</h6>
        <h5 class="card-title mb-1">@Model.CustomerName</h5>
        <h6 class="card-subtitle text-body-secondary mb-1">@Model.CustomerPhoneNumber</h6>
        <h6 class="card-subtitle text-body-secondary mb-1">@Model.CustomerEmailAddress</h6>
        <h6 class="card-subtitle text-body-secondary float-end mb-2">@Model.InvoiceNumber</h6>
        <p class="card-text">
            <span class="visually-hidden" id="@Model.Id">@Model.Id</span>
            <table class="table table-striped table-borderless">
                <tbody>
                    @foreach (var pdvm in Model.PurchaseDetails)
                    {
                        <tr>
                            <td>
                                <span class="visually-hidden" id="@pdvm.Id">@pdvm.Id</span>
                                <span class="visually-hidden" id="@pdvm.ProductId">@pdvm.ProductId</span>
                                <span class="visually-hidden" id="@pdvm.MeasurementUnitId">@pdvm.MeasurementUnitId</span>
                                @pdvm.ProductName
                            </td>
                            <td>
                                @pdvm.Quantity&nbsp;@pdvm.MeasurementUnitName
                            </td>
                            <td>
                                @pdvm.UnitPrice
                            </td>
                            <td>
                                @pdvm.TotalPrice
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </p>
        <hr />
        <h6 class="mb-2">Total Amount:&nbsp;@Model.TotalAmount</h6>
    </div>
</div>